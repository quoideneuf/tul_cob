<%= form_tag request_options_path, :class => 'form-horizontal', :method => :post do  %>
  <div class="container">
    <div class="form-group row">
      <div class="col-sm-12">
        <%= label_tag("", "Chapter/Article Title:", class: "col-form-label") %>
        <%= text_field_tag( class: "request-form form-control") %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-12">
        <%= label_tag("", "Chapter/Article Author:", class: "col-form-label") %>
        <%= text_field_tag( class: "request-form form-control") %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-12">
        <%= label_tag("Start page:") %>
        <%= text_field_tag( class: "request-form form-control") %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-12">
        <%= label_tag("End page:") %>
        <%= text_field_tag( class: "request-form form-control") %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-12">
        <%= label_tag(:not_needed, "Not Needed After (optional):") %>
        <%= select_date Date.today, prefix: :start_date %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-6">
        <%= label_tag(:comment, "Comment:") %>
        <%= text_area_tag(:comment, "", class: "request-form form-control") %>
      </div>
    </div>

    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
      <label class="form-check-label" for="inlineCheckbox1">
        Partial
      </label>
    </div>

    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
      <label class="form-check-label" for="inlineCheckbox2">
        Full Chapter
      </label>
    </div>
  </div>
<% end %>
